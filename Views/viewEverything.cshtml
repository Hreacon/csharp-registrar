@Html.Partial("header.cshtml")

@if(Model["students"].Count > 0)
{
<ul>
  @foreach(var student in Model["students"])
  {
    <li><a href="/student/@student.GetId()">@student.GetName() @student.GetDate()</a></li>
  }
</ul>
<ul>
  @foreach(var course in Model["courses"])
  {
    <li><a href="/course/@course.GetId()">@course.GetName() @course.GetCourseNumber()</a></li>
  }
</ul>
}

<form class="" action="/addCourse" method="post">
  <label for="courseName">Course Name:</label><input type="text" name="courseName" value="">
  <label for="courseNumber">Course Number:</label><input type="text" name="courseNumber" value="">
  <input type="submit" name="submit" value="Add Course to database">
</form>

<form class="" action="/AddStudent" method="post">
  <label for="studentName">Student Name:</label><input type="text" name="studentName" value="">
  <label for="StudentDate">Enrollment Date:</label><input type="date" name="StudentDate" value="">
  <input type="submit" name="submit" value="Add Student To Database">
</form>
